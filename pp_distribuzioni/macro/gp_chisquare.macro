
load '../../cc_gnuplot/gp_init.util'
load '../../cc_gnuplot/gp_pdfs.fnc'

set xlabel "\\gplabel{$x$}" offset xlab_xoff, xlab_yoff

set xrange [0:10]
set yrange [0:0.25]
set ytics 0 0.05

# Four graphs with different lambda. 
#

plot chisquare_pdf(x, 1) lw lw_normal
set ylabel "\\gplabel{$\\chisquarepdf{x}{1}}$" offset ylab_xoff, ylab_yoff
set out 'chisquare_1.tex'
load '../../cc_gnuplot/gp_smallplot.util'

plot chisquare_pdf(x, 2) lw lw_normal
set ylabel "\\gplabel{$\\chisquarepdf{x}{2}}$" offset ylab_xoff, ylab_yoff
set out 'chisquare_2.tex'
load '../../cc_gnuplot/gp_smallplot.util'

plot chisquare_pdf(x, 3) lw lw_normal
set ylabel "\\gplabel{$\\chisquarepdf{x}{3}}$" offset ylab_xoff, ylab_yoff
set out 'chisquare_3.tex'
load '../../cc_gnuplot/gp_smallplot.util'

